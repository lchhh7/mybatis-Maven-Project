<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<bean name="propertiesService" class="egovframework.rte.fdl.property.impl.EgovPropertyServiceImpl" destroy-method="destroy">
		<property name="properties">
			<map>
				<entry key="pageUnit" value="20"/>
				<entry key="pageSize" value="10"/>
				<entry key="pageUnitPopup" value="200"/>

				<entry key="file.path" value="D:/eclipse-workspace/jintranet/webroot/u/file/"/>
				<entry key="file.size.limit" value="10485760"/>
				<entry key="file.size.limit.text" value="10MB"/>

				<entry key="image.path" value="D:/eclipse-workspace/jintranet/webroot/u/img/"/>
				<entry key="img.size.limit" value="3145728"/>
				<entry key="img.size.limit.text" value="3MB"/>
				<entry key="img.thumb.width" value="150"/>
				<entry key="img.thumb.height" value="110"/>
			</map>
		</property>
	</bean>

</beans>